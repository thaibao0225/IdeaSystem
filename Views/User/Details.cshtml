@using IdeaSystem.Data.Common;
@model IdeaSystem.Models.UserModel

@{
    ViewBag.Title = @CommonTable.userTable;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@CommonTable.userTable</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">@CommonTable.home</a></li>
                        <li class="breadcrumb-item active">@CommonTable.userTable</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">

            <h1>Details</h1>
           
                <div>
                    <h4>UserModel</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.user_Name)
                        </dt>
                        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.user_Name)
                        </dd>
                        <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.user_RoleName)
                        </dt>
                        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.user_RoleName)
                        </dd>
                        <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.user_IsDelete)
                        </dt>
                        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.user_IsDelete)
                        </dd>
                    </dl>


                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.user_Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            



            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>

