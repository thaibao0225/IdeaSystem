@using IdeaSystem.Data.Common;
@model IdeaSystem.Models.IdeaDetailModel;

@{
    ViewBag.Title = @CommonTable.ideaTable;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@CommonTable.ideaTable</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">@CommonTable.home</a></li>
                        <li class="breadcrumb-item active">@CommonTable.ideaTable</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">

            <h1>Create</h1>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" hidden>
                            <label asp-for="idea_Id" class="control-label"></label>
                            <input asp-for="idea_Id" class="form-control" value="xxx" />
                            <span asp-validation-for="idea_Id" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="idea_TopicId" class="control-label"></label>
                            <input asp-for="idea_TopicId" class="form-control" value="@ViewBag.topicId" />
                            <span asp-validation-for="idea_TopicId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="idea_Name" class="control-label"></label>
                            <input asp-for="idea_Name" class="form-control" />
                            <span asp-validation-for="idea_Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="idea_Text" class="control-label"></label>
                            <input asp-for="idea_Text" class="form-control" />
                            <span asp-validation-for="idea_Text" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="idea_FilePath" class="control-label"></label>
                            <input asp-for="idea_FilePath" class="form-control" />
                            <span asp-validation-for="idea_FilePath" class="text-danger"></span>
                        </div>


                        @if (ViewBag.categoryList != null)
                        {
                            <div class="form-group">
                                <label asp-for="idea_CategoryId" class="control-label"></label>
                                <select multiple class="form-control" asp-for="idea_CategoryId" required>
                                    @foreach (var categoryName in ViewBag.categoryList)
                                    {
                                        <option value="@categoryName.category_Id">@categoryName.category_Name</option>
                                    }
                                </select>
                                <span asp-validation-for="idea_CategoryId" class="text-danger"></span>
                            </div>
                        }

                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="idea_Agree" required>
                                <label class="form-check-label" asp-for="idea_Agree"></label>
                                <span asp-validation-for="idea_Agree" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-controller="Topic" asp-action="Details" asp-route-id="@ViewBag.topicId">Back to List</a>
            </div>


            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
