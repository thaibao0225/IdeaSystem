@using IdeaSystem.Data.Common;
@model IdeaSystem.Entities.Topic;

@{
    ViewBag.Title = @CommonTable.ideaTable;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@CommonTable.ideaTable</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">@CommonTable.home</a></li>
                        <li class="breadcrumb-item active">@CommonTable.ideaTable</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">

            <h1>Create</h1>

            <h4>Idea</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" hidden>
                            <label asp-for="topic_Id" class="control-label"></label>
                            <input asp-for="topic_Id" class="form-control" value="xxx" />
                            <span asp-validation-for="topic_Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="topic_Name" class="control-label"></label>
                            <input asp-for="topic_Name" class="form-control" />
                            <span asp-validation-for="topic_Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="topic_ClosureDate" class="control-label"></label>
                            <input asp-for="topic_ClosureDate" class="form-control" />
                            <span asp-validation-for="topic_ClosureDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="topic_FinalClosureDate" class="control-label"></label>
                            <input asp-for="topic_FinalClosureDate" class="form-control" />
                            <span asp-validation-for="topic_FinalClosureDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>


            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
