@using IdeaSystem.Data.Common;
@model IdeaSystem.Entities.Topic

@{
    ViewBag.Title = @CommonTable.topicTable;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@CommonTable.topicTable</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">@CommonTable.home</a></li>
                        <li class="breadcrumb-item active">@CommonTable.topicTable</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">


            <h1>Edit</h1>

            <h4>Topic</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="topic_Id" />
                        <div class="form-group">
                            <label asp-for="topic_Name" class="control-label"></label>
                            <input asp-for="topic_Name" class="form-control" />
                            <span asp-validation-for="topic_Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="topic_ClosureDate" class="control-label"></label>
                            <input asp-for="topic_ClosureDate" class="form-control" />
                            <span asp-validation-for="topic_ClosureDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="topic_FinalClosureDate" class="control-label"></label>
                            <input asp-for="topic_FinalClosureDate" class="form-control" />
                            <span asp-validation-for="topic_FinalClosureDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>


            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
