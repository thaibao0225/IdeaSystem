@using IdeaSystem.Data.Common;
@model IdeaSystem.Entities.Topic

@{
    ViewBag.Title = @CommonTable.topicTable;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@CommonTable.topicTable</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">@CommonTable.home</a></li>
                        <li class="breadcrumb-item active">@CommonTable.topicTable</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">


            <h1>Delete</h1>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Topic</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.topic_Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.topic_Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.topic_ClosureDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.topic_ClosureDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.topic_FinalClosureDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.topic_FinalClosureDate)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="topic_Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>


            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>

