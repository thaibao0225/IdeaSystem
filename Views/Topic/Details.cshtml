@using IdeaSystem.Data.Common;
@model IdeaSystem.Models.TopicModel

@{
    ViewBag.Title = @CommonTable.topicTable;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@CommonTable.topicTable</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">@CommonTable.home</a></li>
                        <li class="breadcrumb-item active">@CommonTable.topicTable</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">
            <h1>Details</h1>

            <div>
                <h4>Topic</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.topic_Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.topic_Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.topic_ClosureDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.topic_ClosureDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.topic_FinalClosureDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.topic_FinalClosureDate)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-controller="Idea" asp-action="Create" type="button" class="btn btn-primary">Add Idea</a>
            </div>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.topic_Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
    <!-- Main content -->
    <section class="content">
        <div class="card">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Text</th>
                        <th scope="col">CreateOn</th>
                        <th scope="col">Views</th>
                        <th scope="col">Like</th>
                        <th scope="col">Dislike</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ideaList != null)
                    {
                        @foreach (var item in Model.ideaList)
                        {
                            i++;
                            <tr>
                                <th scope="row">
                                    @i
                                </th>
                                <td>@item.idea_Text</td>
                                <td>@item.idea_CreateOn</td>
                                <td>@item.idea_ViewNumber</td>
                                <td>@item.idea_ReactLikeNumber</td>
                                <td>@item.idea_ReactDislikeNumber</td>
                                <td>
                                    <a asp-controller="Idea" asp-action="Details" asp-route-id="@item.idea_Id">Details</a>|
                                    <a asp-action="Edit" asp-route-id="#">Like</a>|
                                    <a asp-action="Delete" asp-route-id="#">Dislike</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

