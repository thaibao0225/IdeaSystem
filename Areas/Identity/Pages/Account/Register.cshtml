@page "/register"
@using IdeaSystem.Data.Common;
@model RegisterModel
@{
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Register";
}


<div class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="/"><b>@CommonTable.systemName</b></a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Register a new membership</p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="new-password" aria-required="true">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Retype password" autocomplete="new-password" aria-required="true">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    @if (Model.departmentModelList != null)
                    {

                        <div class="input-group mb-3">
@*                            <label asp-for="Input.departmentId" class="control-label"></label>*@
                            <select multiple class="form-control" asp-for="Input.departmentId" required>
                                @foreach (var departmentName in Model.departmentModelList)
                                {
                                    <option value="@departmentName.department_Id">@departmentName.department_Name</option>
                                }
                            </select>
                            <span asp-validation-for="Input.departmentId" class="text-danger"></span>
                        </div>

                    }


                    <div class="row">

                        <div class="col-4">
                            <button type="submit" id="registerSubmit" class="btn btn-primary btn-block">Register</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>



                <a href="/login" class="text-center">I already have a membership</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
</div>


@*<partial name="_ValidationScriptsPartial" />*@
@*@section Scripts {
